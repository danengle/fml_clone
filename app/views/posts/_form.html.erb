<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, Category.all.map {|c| [c.name, c.id] } %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
