<table class="small_round">
  <caption class="medium_round_top">Viewing Users</caption>
  <tr>
    <th class="first_column">ID</th>
    <th>Login</th>
    <th>Full Name</th>
    <th>State</th>
    <th>Admin</th>
  </tr>
  <% @users.each do |user| %>
    <tr class="border_bottom<%= cycle(' odd', ' even') %>">
      <td class="first_column"><%= user.id %></td>
      <td>
        <%= user.login %>
        <div class="actions">
          <%= link_to "Edit", edit_admin_user_path(user) %>
        </div>
      </td>
      <td><%= user.full_name %></td>
      <td><%= user.state %></td>
      <td><%= user.admin? %></td>
    </tr>
  <% end %>
  <tr>
    <td class="pagination_links" colspan="5">
      <div class="pagination_info"><%= page_entries_info %></div>
      <%= will_paginate @users %>
    </td>
  </tr>
</table>