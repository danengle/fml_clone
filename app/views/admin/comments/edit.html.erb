<div>
  <h3>Edit Comment</h3>
  <div id="main_content">
    <div id="main_content_body">
    <% if @comment.errors.any? %>
    <div id="errorExplanation">
      <h2>Whoops! Something went wrong there...</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
      <%= form_for([:admin,@post,@comment]) do |f| %>
        <div id="post_main">
          <div id="post_header" class="medium_round_top ltr_border">
            By <%= link_to @comment.user.login, edit_admin_user_path(@comment.user) %> on <%= link_to "Post #{@post.id}", edit_admin_post_path(@post) %>
          </div>
          <div id="body" class="lr_border">
            <%= f.text_area :body %>
          </div>
          <div id="box_footer" class="medium_round_bottom lbr_border">
            <%= f.submit "Update", :class => 'awesome_button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="third_column">
    <div class="tc_box full_border medium_round">
      <div class="box_header">Actions</div>
      <div class="tc_body">
        <%= button_to "Delete Comment", "#", :class => 'negative_awesome_button small_round' %>
        <%= button_to "Mark as Spam", "#", :class => 'awesome_button' %>
      </div>
    </div>
  </div>
</div>