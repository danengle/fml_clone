<%= link_to 'New Preference', new_admin_preference_path, :class => 'new_object_link new_link' %>
<h3><%= @preference_category.name %> Preferences</h3>
<%= form_tag bulk_update_admin_preferences_path do %>
  <ul id="preferences">
    <% @preferences.each do |pref| %>
      <li>
        <label><%= pref.display_name %>:</label>
        <%= text_field_tag "preferences[#{pref.key}]", pref.value %>
      </li>
    <% end %>
    <li class="pref_submit"><%= submit_tag "Update Preferences", :class => 'like_button action_link' %></li>
  </ul>
  <%= hidden_field_tag 'preference_category', @preference_category.name %>
<% end %>